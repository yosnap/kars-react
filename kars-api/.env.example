# Configuración para Kars API (Backend)
# Copia este archivo a .env y configura con tus valores

# Database
DATABASE_URL="mongodb://localhost:27017/karsad"

# API de ENTRADA - Motoraldia (para importar vehículos desde Motoraldia)
MOTORALDIA_IMPORT_API_URL="https://motoraldia.net/wp-json/api-motor/v1/vehicles"
MOTORALDIA_IMPORT_USER="your_motoraldia_user"
MOTORALDIA_IMPORT_PASS="your_motoraldia_password"

# Server Configuration
PORT=3001
NODE_ENV=development

# Sync Configuration
SYNC_INTERVAL_MINUTES=30
ENABLE_AUTO_SYNC=true

# Super Admin (acceso completo)
SUPER_ADMIN_USER=superadmin
SUPER_ADMIN_PASS=your_super_admin_password

# Admin Regular (acceso restringido)  
ADMIN_USER=admin
ADMIN_PASS=your_admin_password

# CORS Origins (comma separated)
CORS_ORIGINS="http://localhost:5173,http://localhost:3000"

# JWT Secret (generate a secure random string)
JWT_SECRET="your_secure_jwt_secret_key"

# Public Base URL for image URLs in Motoraldia sync
PUBLIC_BASE_URL="http://localhost:5173"