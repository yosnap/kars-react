{
  "name": "kars-api",
  "version": "0.1.4",
  "description": "API backend para Kars.ad con gestión de vehículos y sincronización",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "sync": "node dist/sync/syncService.js",
    "test:connection": "ts-node src/scripts/test-db-connection.ts",
    "import:brands": "ts-node src/scripts/importBrandsProduction.ts",
    "import:brands:dev": "ts-node src/scripts/importBrands.ts",
    "import:models": "curl -X POST http://localhost:3001/api/brands/import-models -H 'Authorization: Basic <credentials>'"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "axios": "^1.6.2",
    "bcrypt": "^5.1.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongodb": "^6.18.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "prisma": "^5.7.1",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "@types/sharp": "^0.32.0",
    "nodemon": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "api",
    "vehicles",
    "mongodb",
    "prisma",
    "sync"
  ],
  "author": "AreaF Design",
  "license": "MIT"
}
